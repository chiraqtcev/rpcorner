	}
	
	//Наш небольшой хак для CatFish:
	void itemWalk(Item& item, Critter& crit, bool entered, uint8 dir) override
	{
		if(entered)
		{
			crit.Wait(1);
			
			int hardness = item.Val0;
			int skill = item.Val1;
			
			if(perceptionCheck(item, crit))
			{
				crit.Say(SAY_NETMSG, getAlmostStepMessage()); //Не наступил, заметил.
				crit.ParamBase[CR_VAL7] = 1;
			}
			else
			{
				crit.ParamBase[CR_VAL7] = 0; //Не заметил.
			}
		}
		else
		{
			if( crit.ParamBase[CR_VAL7] == 1 ) //Заметил.
			{
				crit.ParamBase[CR_VAL7] = 0; //Забыл, взрыва не может быть, как ты и протестил (хотел).
			}
			else
			{ //Последний шанс:
				if(perceptionCheck(item, crit))
				{
					crit.Say(SAY_NETMSG, "Вы осторожно убрали ногу с чуть было не активированной мины.");
				}
				else //Кабум!
				{
					crit.Say(SAY_EMOTE, "Активирует мину, убрав ногу" );
					detonate( item );			
				}
			}
		}
	}

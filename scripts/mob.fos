bool _MySkill( Critter& cr, int skill, Critter@ onCritter, Item@ onItem, Scenery@ onScenery )
{
	cr.SetHomePos( cr.HexX, cr.HexY, cr.Dir );
	cr.Animate( 0, ANIM2_PICKUP, null, true, false );
	cr.Wait( 1000 );
	
	cr.Say( SAY_EMOTE, "Поднимает" );

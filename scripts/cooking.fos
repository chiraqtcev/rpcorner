			cr.Say( SAY_NETMSG, "|0xFFFF00 Фарш необходимо завернуть в свежую лепешку." );
		}
		else if( _CritCountItem( cr, PID_BROC_FLOWER ) < 2 )
		{
			cr.Say( SAY_NETMSG, "|0xFFFF00 Измельченные цветы Брока отбивают аромат крысятины." );
		}
    }
}

